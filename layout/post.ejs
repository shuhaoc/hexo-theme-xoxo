<div class="post-container">
  <article class="post" id="post">
    <header class="post-header text-center">
      <h1 class="title">
        <%=page.title%>
      </h1>
      <span>
        <% if (theme.show_date && page.date) { %>
        <time class="time" datetime="<%=date_xml(page.date)%>">
        <%=date(page.date)%>
      </time>
        <% } %>
      </span>
      <span class="slash">/</span>
      <span class="post-meta">
      <span class="post-tags">
        <%- list_tags(page.tags, {
          show_count: false,
          class: 'article-tag'
        }) %>
      </span>
    </span>
      <span class="slash">/</span>
      <span class="read">
      点击：
      <% if (theme.leancloud_visitors.enable) { %>
        <span id="<%= url_for(page.path) %>" class="leancloud_visitors" data-flag-title="<%= page.title %>">
            <span class="leancloud-visitors-count"></span>
        </span>
     <% } %>
    </span>
      <span class="slash">/</span>
      <span class="read">阅读耗时 <%=readingTime(page.content, '分钟') %></span>
    </header>

    <div class="post-content">
      <%-page.content%>
    </div>
  </article>
  <div class="toc-container">
    <%- partial('partials/toc') %>
  </div>
</div>
<%- partial('partials/copyright') %>
